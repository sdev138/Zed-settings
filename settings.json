// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
//
// Hi, my name is Samarth Dev and this is my custom Zed theme
// Feel free to use it for your zed editor
//
{
  "base_keymap": "VSCode",
  "icon_theme": "Catppuccin Mocha",
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // "cursor_shape": "block", (Currently its malleable)
  "vim_mode": true,
  "ui_font_size": 12,
  "buffer_font_size": 11,
  "buffer_font_fallbacks": ["Hack Nerd Font"],
  "buffer_font_family": "Menlo",
  "ui_font_family": "Menlo",
  "buffer_font_weight": 500, // Standard is 400
  "unnecessary_code_fade": 0.5,
  "ui_font_features": {
    "calt": false
  },
  "buffer_line_height": "standard",
  "entry_spacing": "standard",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night Storm"
  },
  // "tab_size": 2,
  "confirm_quit": true,
  "auto_update": false,
  "enable_language_server": true,
  "format_on_save": "on",
  "git_status": "true"
  // "terminal": {
  // "font_family": "FiraCode Nerd Font Mono"
  // }
}
